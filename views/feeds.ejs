<% include ./partials/header.ejs %>

<div class="w-full min-h-screen text-white bg-zinc-800 px-10 py-8">
    <div class="cards flex flex-wrap gap-10">

        <% posts.forEach(function(elem){ %>
           
            <div class="card w-32">
                <div class="w-full h-40 rounded-lg bg-zink-700 overflow-hidden">
                    <img class="h-full w-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                </div>
                <h3 class="text-sm mt-2"> <%= elem.title %> </h3>
                <h5 class="text-sm"> @<%= elem.user.username %> </h5>
            </div>


      <%  }) %>


    </div>

</div>



<% include ./partials/footer.ejs %>