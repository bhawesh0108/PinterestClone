<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-700 text-white px-10 py-4">

    <h3 class="text-xl font-semibold mt-5">Create New Post</h3>
    <hr class="opacity-60 mt-3">
    <form action="/createPost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 mt-2 px-3 py-2" type="file" name="postimage">
        <input class="text-black  w-1/3 mt-2 px-3 py-2" type="text" placeholder="Title" name="title">
        <textarea class="text-black block h-60  w-1/3 mt-2 px-3 py-2" type="text" placeholder="Description" name="description"></textarea>
        <input class="block w-1/3 mt-2 bg-red-700 rounded-md px-3 py-2" type="submit" value ="Add New Post">
    </form>


</div>




